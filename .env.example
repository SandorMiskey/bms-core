# Example environment overrides for local development.

PATH=/opt/homebrew/Cellar/libpq/18.1/bin:$PATH

# Migration tool binary
MIGRATE=migrate

# Migration paths
MIGRATIONS_SHARED=db/migrations/shared
MIGRATIONS_SQLITE=db/migrations/sqlite
MIGRATIONS_POSTGRES=db/migrations/postgres

# Schema dump paths
SCHEMA_SQLITE=db/schema/sqlite
SCHEMA_POSTGRES=db/schema/postgres

# SQLite database location
SQLITE_PATH=bms.db
SQLITE_DSN=sqlite3://bms.db

# PostgreSQL DSN (replace locally)
DSN_POSTGRES=postgres://user:pass@localhost:5432/bms?sslmode=disable
